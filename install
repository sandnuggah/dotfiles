#!/bin/sh

# Ask for the administrator password upfront
sudo -v

# Update existing `sudo` time stamp until `install` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Install Xcode command line tools
if ! command -v xcode-select -p >/dev/null; then
  xcode-select --install
fi

# Install homebrew
if ! command -v brew >/dev/null; then
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Bundle applications
brew bundle --file=- <<EOF
  tap 'caskroom/cask'
  tap 'caskroom/versions'
  tap 'homebrew/bundle'
  tap 'homebrew/cask-fonts'
  tap 'homebrew/core'
  
  brew 'bat'
  brew 'cmatrix'
  brew 'coreutils'
  brew 'curl'
  brew 'direnv'
  brew 'fd'
  brew 'fish'
  brew 'git'
  brew 'htop'
  brew 'httpie'
  brew 'mas'
  brew 'nodenv'
  brew 'openssl'
  brew 'reattach-to-user-namespace'
  brew 'sl'
  brew 'ssh-copy-id'
  brew 'starship'
  brew 'stow'
  brew 'tmux'
  brew 'wget'

  cask 'alfred'
  cask 'caskroom/fonts/font-fira-code'
  cask 'docker'
  cask 'google-chrome'
  cask 'iina'
  cask 'kitty'
  cask 'qlcolorcode'
  cask 'qlmarkdown'
  cask 'qlstephen'
  cask 'qlvideo'
  cask 'quicklook-csv'
  cask 'quicklook-json'
  cask 'signal'
  cask 'the-unarchiver'
  cask 'transmission'
  cask 'webpquicklook'

  mas '1Blocker', id: 1107421413
  mas 'Pixelmator', id: 407963104
  mas 'Radium', id: 597611879
  mas 'Textual IRC Client', id: 896450579
  mas 'ToothFairy', id: 1191449274
  mas 'Transmit', id: 403388562
  mas 'Xcode', id: 497799835
  mas 'XeeÂ³', id: 639764244
EOF

# Install VSCode extensions
if ! command -v code >/dev/null; then
cat <<EOF | grep -v '^#' | xargs -L1 code --install-extension
  2gua.rainbow-brackets
  SirTori.indenticator
  bungcip.better-toml
  cometeer.spacemacs
  eamodio.gitlens
  esbenp.prettier-vscode
  file-icons.file-icons
  flowtype.flow-for-vscode
  LaurentTreguier.vscode-simple-icons
  lmcarreiro.vscode-smart-column-indenter
  mrmlnc.vscode-postcss-sorting
  ms-python.python
  ms-vscode.cpptools
  oderwat.indent-rainbow
  OnlyLys.leaper
  pustelto.bracketeer
  rafamel.subtle-brackets
  rust-lang.rust
  skyapps.fish-vscode
  Tyriar.sort-lines
  webfreak.debug
EOF
fi

# Add fish to shells
if ! fgrep -q '/usr/local/bin/fish' /etc/shells; then
  echo '/usr/local/bin/fish' | sudo tee -a /etc/shells
fi

# Set fish as the default shell
if [[ ! $SHELL = '/usr/local/bin/fish' ]]; then
  chsh -s /usr/local/bin/fish
fi

echo 'Install complete'
